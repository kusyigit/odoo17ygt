<odoo>
    <record id="view_partner_form_call_button" model="ir.ui.view">
        <field name="name">res.partner.call.button</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="after">
                <button type="object" name="action_call_number" string="Ara" class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>
